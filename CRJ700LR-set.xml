                <y-offset-m>-0.468</y-offset-m>
                <z-offset-m>-13.35</z-offset-m>
                <pitch-offset-deg>-47.5</pitch-offset-deg>
                <heading-offset-deg>0</heading-offset-deg>
                <default-field-of-view-deg type="double">34.5</default-field-of-view-deg>
