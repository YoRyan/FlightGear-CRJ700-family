<?xml version="1.0" encoding="UTF-8" ?>

<!-- Bombardier CRJ700 series -->
<!-- NWS panel -->

<PropertyList>

	<path>nws.ac</path>

	<params>
		<lightmap-texture-path>Aircraft/Generic/generic-lightmap.png</lightmap-texture-path>
	</params>

	<panel-marking-emit>
		<red>1</red>
		<green>0.871</green>
		<blue>0.427</blue>
	</panel-marking-emit>

	<!-- Visible only within 1/2 km -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Markings</object-name>
		<condition>
			<greater-than-equals>
				<property alias="../../../../params/powerN" />
				<value>105</value>
			</greater-than-equals>
		</condition>
		<emission>
			<red alias="../../../panel-marking-emit/red" />
			<green alias="../../../panel-marking-emit/green" />
			<blue alias="../../../panel-marking-emit/blue" />
			<factor-prop>controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>NWS</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/gear/enable-tiller</property>				
			</binding>
			<binding>
				<command>nasal</command>
				<script>
					CRJ700.dialogs.tiller.open();
				</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/gear/enable-tiller</property>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>NWS</object-name>
		<property>controls/gear/enable-tiller</property>
		<offset>0</offset>
		<factor>60</factor>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>-0.0034</z-m>
		</center>
	</animation>

