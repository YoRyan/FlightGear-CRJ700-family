	<color>
	    <red>1</red>
	    <green>1</green>
	    <blue>1</blue>
	</color>
    </hrule>

    <group>
	<layout>table</layout>
	<text>
	    <row>0</row>
	    <col>0</col>
	    <halign>right</halign>
	    <label>[ IAS ]</label>
	    <visible>
		<and>
		    <property>autopilot/internal/autothrottle-engaged</property>
		    <equals>
			<property>controls/autoflight/speed-mode</property>
			<value>0</value>
		    </equals>
		</and>
	    </visible>
	</text>
	<text>
	    <row>0</row>
	    <col>0</col>
	    <halign>right</halign>
	    <label>[ MACH ]</label>
	    <visible>
		<and>
		    <property>autopilot/internal/autothrottle-engaged</property>
		    <equals>
			<property>controls/autoflight/speed-mode</property>
			<value>1</value>
		    </equals>
		</and>
	    </visible>
	</text>
	<text>
	    <row>0</row>
	    <col>1</col>
	    <halign>right</halign>
	    <label>||</label>
	</text>
	<text>
	    <row>0</row>
	    <col>2</col>
	    <label>[ HOLD ROLL ]</label>
	    <visible>
		<and>
		    <property>autopilot/internal/autoflight-engaged</property>
		    <equals>
			<property>controls/autoflight/lateral-mode</property>
			<value>0</value>
		    </equals>
		    <equals>
			<property>controls/autoflight/basic-roll-mode</property>
			<value>0</value>
		    </equals>
		</and>
	    </visible>
	</text>
	<text>
	    <row>0</row>
	    <col>2</col>
	    <label>[ HOLD HDG ]</label>
	    <visible>
		<and>
		    <property>autopilot/internal/autoflight-engaged</property>
		    <equals>
			<property>controls/autoflight/lateral-mode</property>
			<value>0</value>
		    </equals>
		    <equals>
			<property>controls/autoflight/basic-roll-mode</property>
			<value>1</value>
		    </equals>
		</and>
	    </visible>
	</text>
	<text>
	    <row>0</row>
	    <col>2</col>
	    <label>[ HDG ]</label>
	    <visible>
		<and>
		    <property>autopilot/internal/autoflight-engaged</property>
		    <equals>
			<property>controls/autoflight/lateral-mode</property>
			<value>1</value>
		    </equals>
		</and>
	    </visible>
	</text>
	<text>
	    <row>0</row>
	    <col>2</col>
	    <label>[ NAV ]</label>
	    <visible>
		<and>
		    <property>autopilot/internal/autoflight-engaged</property>
		    <equals>
			<property>controls/autoflight/lateral-mode</property>
			<value>2</value>
		    </equals>
		</and>
	    </visible>
	</text>
	<text>
	    <row>0</row>
	    <col>2</col>
	    <label>[ APPR ]</label>
	    <visible>
		<and>
		    <property>autopilot/internal/autoflight-engaged</property>
		    <equals>
			<property>controls/autoflight/lateral-mode</property>
			<value>3</value>
		    </equals>
		</and>
	    </visible>
	</text>
	<text>
	    <row>0</row>
	    <col>3</col>
	    <halign>left</halign>
	    <label>||</label>
	</text>
	<text>
