			<equals>
			    <property>controls/autoflight/lateral-mode</property>
			    <value>3</value>
			</equals>
		    </not>
		</and>
	    </visible>
	</text>
	<text>
	    <row>0</row>
	    <col>4</col>
	    <halign>left</halign>
