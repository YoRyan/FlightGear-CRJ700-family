		    </equals>
		</and>
	    </visible>
	</text>
	<text>
	    <row>0</row>
	    <col>4</col>
	    <halign>left</halign>
	    <label>[ VS ]</label>
	    <visible>
		<and>
		    <property>autopilot/internal/autoflight-engaged</property>
		    <equals>
			<property>controls/autoflight/vertical-mode</property>
			<value>2</value>
		    </equals>
		</and>
	    </visible>
	</text>
