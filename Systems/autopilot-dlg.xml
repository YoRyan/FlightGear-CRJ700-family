		<text>
		    <row>2</row>
		    <col>0</col>
		    <label>VS:</label>
		</text>
		<group>
		    <layout>hbox</layout>
		    <row>2</row>
		    <col>1</col>
		    <button>
			<halign>right</halign>
			<legend>&lt;</legend>
			<binding>
			    <command>property-adjust</command>
			    <property>controls/autoflight/vertical-speed-select</property>
			    <step>-100</step>
			    <min>-9000</min>
			</binding>
		    </button>
		    <input>
			<property>controls/autoflight/vertical-speed-select</property>
			<binding>
			    <command>dialog-apply</command>
			</binding>
			<live type="bool">true</live>
		    </input>
		    <button>
			<halign>left</halign>
			<legend>&gt;</legend>
			<binding>
			    <command>property-adjust</command>
			    <property>controls/autoflight/vertical-speed-select</property>
			    <step>100</step>
			    <max>9000</max>
			</binding>
		    </button>
		</group>
	    </group>

	    <group>
		<layout>hbox</layout>
		<group>
		    <layout>hbox</layout>
		    <text>
			<label>O</label>
			<visible>
			    <equals>
				<property>controls/autoflight/vertical-mode</property>
				<value>1</value>
			    </equals>
			</visible>
		    </text>
		    <button>
			<legend>ALT</legend>
			<binding>
			    <command>property-cycle</command>
			    <property>controls/autoflight/vertical-mode</property>
			    <value>1</value>
			    <value>0</value>
			</binding>
		    </button>
		    <text>
			<label>O</label>
			<visible>
			    <equals>
				<property>controls/autoflight/vertical-mode</property>
				<value>1</value>
			    </equals>
			</visible>
		    </text>
		</group>
		<group>
		    <layout>hbox</layout>
		    <text>
			<label>O</label>
			<visible>
			    <equals>
				<property>controls/autoflight/vertical-mode</property>
				<value>2</value>
			    </equals>
			</visible>
		    </text>
		    <button>
			<legend>VS</legend>
			<binding>
			    <command>property-cycle</command>
			    <property>controls/autoflight/vertical-mode</property>
			    <value>2</value>
			    <value>0</value>
			</binding>
		    </button>
		    <text>
			<label>O</label>
			<visible>
			    <equals>
				<property>controls/autoflight/vertical-mode</property>
				<value>2</value>
			    </equals>
			</visible>
		    </text>
		</group>
	    </group>
	</group>
    </group>

